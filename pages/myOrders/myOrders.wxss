.tab text {
  display: inline-block;
  text-align: center;
  font-size: 30rpx;
  padding: 13rpx;
}

.tab {
  display: flex;
  border-bottom: 1px solid rgba(0, 0, 0, 0.08);
  height: 85rpx;
  align-items: flex-end;
  justify-content: space-evenly;
}

.tab text.active {
  border-bottom: 3rpx solid #56a5ff;
  color: #56a5ff;
}

.recharge-list {
  background: #fdfdfd;
  border-radius: 30rpx;
  padding: 0 25rpx 21rpx 25rpx;
}

.recharge-item {
  width: 700rpx;
  height: 128rpx;
  background: #fff;
  box-shadow: 0px 2rpx 27rpx 0 rgba(56, 56, 56, 0.07);
  border-radius: 9rpx;
  margin-top: 21rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.item-left {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.icon {
  width: 73rpx;
  height: 73rpx;
  margin: 0rpx 20rpx 0rpx 20rpx;
}

.recharge-info {
  display: inline-flex;
  flex-direction: column;
}

.title {
  color: #333;
  font-size: 30rpx;
  line-height: 43rpx;
}

.time {
  color: #999;
  font-size: 24rpx;
}

.recharge-item .price {
  color: #f48726;
  font-size: 36rpx;
  margin-right: 33rpx;
}

.rent-list {
  background: #fdfdfd;
  border-radius: 30rpx;
  padding: 0 25rpx 21rpx 25rpx;
}

.rent-item {
  width: 700rpx;
  height: 195rpx;
  background: #fff;
  box-shadow: 0px 2rpx 27rpx 0 rgba(56, 56, 56, 0.07);
  border-radius: 9rpx;
  margin-top: 21rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.rent-info {
  display: inline-flex;
  flex-direction: column;
}

.rent-item .price {
  color: #56a5ff;
  font-size: 36rpx;
  margin-right: 33rpx;
}
