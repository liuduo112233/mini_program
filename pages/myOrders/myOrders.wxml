  </view>

  <view class='tab-content'>
    <!-- 充值记录 -->
    <view class='recharge-list' wx:if="{{tabName=='充值记录'}}">
      <view class='recharge-item'>
        <view class='item-left'>
          <image class='icon' src='../../images/recharge_icon.png'></image>
          <view class='recharge-info'>
            <text class='title'>通过微信充值</text>
            <text class='time'>2018-10-10 12:25:25</text>
          </view>
        </view>
        <text class='price'>+200元</text>
      </view>

      <view class='recharge-item'>
        <view class='item-left'>
          <image class='icon' src='../../images/recharge_icon.png'></image>
          <view class='recharge-info'>
            <text class='title'>通过微信充值</text>
            <text class='time'>2018-10-10 12:25:25</text>
          </view>
        </view>
        <text class='price'>+200元</text>
      </view>

      <view class='recharge-item'>
        <view class='item-left'>
          <image class='icon' src='../../images/recharge_icon.png'></image>
          <view class='recharge-info'>
            <text class='title'>通过微信充值</text>
            <text class='time'>2018-10-10 12:25:25</text>
          </view>
        </view>
        <text class='price'>+200元</text>
      </view>
    </view>
    <!-- 租借记录 -->
    <view class='rent-list' wx:else="{{tabName=='租借记录'}}">
      <view class='rent-item'>
        <view class='item-left'>
          <image class='icon' src='../../images/rent_icon.png'></image>
          <view class='rent-info'>
            <text class='title'>北京市中医院2号床</text>
