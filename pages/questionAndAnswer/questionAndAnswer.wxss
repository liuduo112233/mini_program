.help-wrap {
  background-color: #fff;
}

.li {
  display: flex;
  justify-content: space-between;
  font-size: 34rpx;
  height: 112rpx;
  align-items: center;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.12);
  box-sizing: border-box;
  margin: 0 49rpx;
}


.li.active {
  border: none;
}
.li .arrow{
  transition: all 0.25s;
}
.li.active .arrow{
  transform: rotate(360deg);
}

.li .title {
  color: #333;
  font-size: 30rpx;
}

.li .arrow {
  display: inline-block;
  width: 20rpx;
  height: 11rpx;
  background-size: 100% 100%;
  transform: rotate(180deg);
}

.help-wrap .content {
  background: rgba(0, 0, 0, 0.03);
  font-size: 24rpx;
  color: #999;
  padding: 33rpx 75rpx;
  line-height: 47rpx;
}

.help-wrap .btn {
  font-size: 25rpx;
  color: #fff;
  width: 400rpx;
  height: 68rpx;
  line-height: 68rpx;
  background: linear-gradient(18deg, rgba(87, 91, 221, 1) 0%, rgba(86, 163, 254, 1) 100%);
  box-shadow: 0 6rpx 16rpx 0 rgba(25, 113, 214, 0.28);
  border-radius: 34rpx;
  position: fixed;
  bottom: 50rpx;
  left: 50%;
  transform: translate(-50%);
}
