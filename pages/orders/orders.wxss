.order{
  padding: 0 25rpx 30rpx 25rpx;
  background: #FDFDFD;
}
.order-item{
  background: #fff;
  padding: 46rpx 22rpx 26rpx;
  background:rgba(255,255,255,1);
  box-shadow:0rpx 2rpx 27rpx 0rpx rgba(56,56,56,0.13);
  border-radius:7rpx;
  margin-top: 30rpx;
}
.order-item .item-top{
  display: flex;
  border-bottom: 1px solid rgba(0,0,0,0.07);
  padding-bottom: 30rpx;
}
.orderItemImg{
  width: 98rpx;
  height: 98rpx;
  margin-right: 13rpx;
}
.orderItemInfo{
  display:inline-flex;
  flex-direction: column;
  justify-content: start;
}
.orderItemInfo .status{
  padding-top: 11rpx;
  line-height: 43rpx;
  font-size: 36rpx;
}
.orderItemInfo .detail{
  margin-top: 20rpx;
  display: flex;
  height: 30rpx;
  color: #999;
  font-size: 25rpx;
  align-items: center;
}
.detail .time{
  margin-right: 8rpx;
  width: 24rpx;
  height: 24rpx;
  display: inline-block;
  background-size: 100% 100%;
}
.detail .location{
  width: 24rpx;
  height: 24rpx;
  display: inline-block;
  background-size: 100% 100%;
  margin: 0 1rpx 0 31rpx;
}
.item-bottom{
  display: flex;
  flex-direction: column;
  align-items: center
  
}
.item-bottom .price{
  font-size: 52rpx;
  color:#56A5FF;
  margin-top: 52rpx;
}
.item-bottom .price_title{
  font-size: 30rpx;
  margin-top: 9rpx;
}
.order .btn{
  background:linear-gradient(18deg,rgba(87,91,221,1) 0%,rgba(86,163,254,1) 100%);
  box-shadow:0px 6px 16px 0px rgba(25,113,214,0.28);
  border-radius:34rpx;
  width: 400rpx;
  height: 68rpx;
  line-height: 68rpx;
  font-size: 25rpx;
  color: #fff;
  margin-top: 38rpx;

}